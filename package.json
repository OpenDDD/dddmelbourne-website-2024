{
  "name": "dddperth-website",
  "version": "1.0.0",
  "description": "The website for DDD Perth.",
  "main": "index.js",
  "author": "DDD WA Inc.",
  "license": "N/A",
  "private": true,
  "scripts": {
    "clean": "rimraf build .next public/_next",
    "build:standalone": "npm run clean && dotenv -v STANDALONE_BUILD=true next build && copyfiles package-lock.json public/**/*.* .next/standalone && cd deploy && copyfiles *.* ../.next/standalone && cd ../.next && copyfiles \"static/**/*\" standalone/public/_next && cd standalone && npm ci --production --ignore-scripts && rimraf node_modules/@next/swc-*",
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "analyze": "cross-env ANALYZE=true npm run build",
    "format-code": "prettier \"pages/**/*.*\" \"components/**/*.*\" \"layouts/**/*.*\" \"config/**/*.*\" --write",
    "lint": "eslint .",
    "check-types": "tsc",
    "validate": "npm run lint && npm test && npm run check-types && npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.1.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.0",
    "font-awesome": "^4.7.0",
    "js-cookie": "^3.0.1",
    "next": "15.3.2",
    "pixboost-react": "^2.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-modal": "^3.16.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@emotion/jest": "^11.8.0",
    "@eslint/js": "^9.28.0",
    "@next/bundle-analyzer": "15.3.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest-axe": "^3.5.3",
    "@types/js-cookie": "^3.0.1",
    "@types/leaflet": "^1.7.11",
    "@types/node": "^17.0.21",
    "@types/react": "19.1.4",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "19.1.5",
    "@types/react-leaflet": "^2.8.2",
    "@types/react-modal": "^3.16.3",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^5.0.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-axe": "^6.0.0",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "engines": {
    "node": "18.x.x"
  },
  "overrides": {
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5"
  }
}
